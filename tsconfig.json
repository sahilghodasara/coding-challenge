{
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "outDir": "./app",
    "noImplicitAny": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false
  },
  "exclude": ["node_modules", "app"]
}
